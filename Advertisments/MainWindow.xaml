<Window x:Class="Advertisments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Advertisments" Loaded="Window_Loaded"    
        mc:Ignorable="d" Closing="Window_Closing"
        Title="MainWindow" Height="550" Width="725">
    <Grid>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="325,26,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Rectangle x:Name="frame" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="368" Margin="42,75,0,0" Stroke="Black" VerticalAlignment="Top" Width="639"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="373,75,0,0" VerticalAlignment="Top" Width="100"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="79,479,0,0" VerticalAlignment="Top" Width="573" Maximum="100" TickFrequency="5" TickPlacement="Both" Value="65" Background="#FF1F895E" AutoToolTipPlacement="TopLeft" LargeChange="5" SmallChange="1" ValueChanged="slider_ValueChanged" Minimum="30"/>

    </Grid>
</Window>
